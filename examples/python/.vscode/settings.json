{
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120,
  "editor.rulers": [
    {
      "column": 65,
      "color": "orange"
    },
    {
      "column": 120,
      "color": "red"
    },
  ],
  "[json]": {
    "editor.tabSize": 2,
  },
  "[jsonc]": {
    "editor.tabSize": 2,
  },
  "[python]": {
    "editor.tabSize": 4,
  },
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--verbose"
  ],
  "python.formatting.autopep8Args": [],
}
